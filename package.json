{
  "name": "@jnymmt/n8n-nodes-miniflux",
  "version": "0.1.1",
  "description": "n8n node for Miniflux RSS reader",
  "keywords": [
    "n8n",
    "n8n-community-node-package",
    "miniflux",
    "rss",
    "feed",
    "reader"
  ],
  "license": "MIT",
  "author": {
    "name": "yamba"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yambal/n8n-nodes-miniflux"
  },
  "main": "dist/nodes/Miniflux/Miniflux.node.js",
  "n8n": {
    "n8nNodesApiVersion": 1,
    "nodes": [
      "dist/nodes/Miniflux/Miniflux.node.js"
    ],
    "credentials": [
      "dist/credentials/MinifluxApi.credentials.js"
    ]
  },
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "node -e \"require('fs').cpSync('src/nodes/Miniflux/miniflux.svg', 'dist/nodes/Miniflux/miniflux.svg')\"",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/node": "^22.0.0",
    "n8n-workflow": "^1.70.0",
    "typescript": "^5.7.0"
  },
  "peerDependencies": {
    "n8n-workflow": ">=1.0.0"
  }
}
